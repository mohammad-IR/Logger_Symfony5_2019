{% extends "Admin/Doshbord.html.twig" %}

{% block body %}
    <table class="table table-dark" style="margin-top: 100px;" >
        <thead style="border-top: 2px; color: wheat">
        <tr>
            <th scope="col" >#</th>
            <th scope="col">نام </th>
            <th scope="col">پدر</th>
            <th scope="col">حذف</th>
        </tr>
        </thead>
        <tbody>
        {% for cat in category %}
        <tr>
            <th scope="row">{{ cat[0] }}</th>
            <td><a href="{{ path('edit_category', [cat[0]]) }} ">{{ cat[1] }}</a></td>
            <td>{{ cat[2] }}</td>
            <td><a href="{{ path('delete_category', [cat[0]]) }}"><i class="fas fa-trash-alt" style="font-size: 20px;"></i></a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ parent() }}

    {% block javascript %}

    {{ parent() }}
    {% endblock %}
{% endblock %}